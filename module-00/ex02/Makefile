CPPFLAGS	= -Wall -Wextra -Werror
CXX			= c++ -std=c++98 
NAME		= Account

FILES 		= Account.cpp tests.cpp

O_FILES	= $(FILES:.cpp=.o)

all : $(NAME)

$(NAME) : $(O_FILES)
	$(CXX) $(CPPFLAGS)  $(O_FILES)  -o $(NAME)

clean 	:
	rm -f $(O_FILES)

fclean : clean
	rm -f $(NAME)

re    	: clean $(NAME)
